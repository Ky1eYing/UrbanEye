<div class="login-content">
    <div class="login-form-container">
        <div class="login-form">
            <h3 class="login-header">Sign Up</h3>

            <div class="form-group">
                <input type="text" placeholder="Username" class="form-input username-input">
                <div class="error-message"></div>
            </div>

            <div class="form-group">
                <input type="email" placeholder="Email" class="form-input email-input">
                <div class="error-message"></div>
            </div>

            <div class="form-group">
                <input type="password" placeholder="Password" class="form-input password-input">
                <div class="error-message"></div>
            </div>

            <div class="form-group">
                <input type="password" placeholder="Confirm Password" class="form-input confirm-password-input">
                <div class="error-message"></div>
            </div>

            <div class="form-actions">
                <button class="login-submit-btn">Sign Up</button>
            </div>

            <div class="form-footer">
                <span>Already have an account?</span>
                <a href="/login" class="login-link">Log in here!</a>
            </div>
        </div>
    </div>
</div>