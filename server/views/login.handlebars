<div class="login-content">
    <div class="login-form-container">
        <div class="login-form">
            <h3 class="login-header">Log in</h3>

            <div class="form-group">
                <input type="text" placeholder="Username" class="form-input username-input">
                <div class="error-message"></div>
            </div>

            <div class="form-group">
                <input type="password" placeholder="Password" class="form-input password-input">
                <div class="error-message"></div>
            </div>

            <div class="form-actions">
                <button class="login-submit-btn">Log in</button>
            </div>

            <div class="form-footer">
                <span>Do not have account?</span>
                <a href="/signup" class="signup-link">Sign up here!</a>
            </div>
        </div>
    </div>
</div>